{
  "name": "datahub-ui",
  "version": "0.8.6",
  "description": "Reusable components for Planet OS Datahub",
  "main": "dist/datahub.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/planet-os/ui-components.git"
  },
  "keywords": [
    "map",
    "leaflet"
  ],
  "author": "Christophe Viau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/planet-os/ui-components/issues"
  },
  "src": "src/start.js src/*utils.js src/*common.js src/*data.js src/*widget.js src/*legend.js src/*palette.js src/*map.js src/*chart.js src/end.js",
  "srcChart": "src/start-chart.js src/*utils.js src/*common.js src/*data.js src/*chart.js src/end.js",
  "scripts": {
    "build": "uglifyjs $npm_package_src -b --wrap datahub -o dist/datahub.js",
    "build-min": "uglifyjs $npm_package_src -b -c -m --wrap datahub -o dist/datahub-min.js",
    "build-chart": "uglifyjs $npm_package_srcChart -b --wrap datahub -o dist/datahub-chart.js",
    "build-chart-min": "uglifyjs $npm_package_srcChart -b -c -m --wrap datahub -o dist/datahub-chart-min.js",
    "build-watch": "npm-watch"
  },
  "homepage": "https://github.com/planet-os/ui-components#readme",
  "dependencies": {
    "leaflet": "^1.0.2",
    "d3": "^4.4.0",
    "d3-scale-chromatic": "^1.1.0"
  },
  "devDependencies": {
    "npm-watch": "^0.1.8"
  },
  "watch": {
    "build-chart": "src/*.js"
  }
}
